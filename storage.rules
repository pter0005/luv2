rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Rascunhos temporários: Publicamente legíveis para que as pré-visualizações funcionem, mas apenas graváveis pelo proprietário.
    match /temp/{userId}/{allPaths=**} {
      allow read: if true; // Permite leitura pública para pré-visualizações de imagem
      allow delete: if request.auth.uid == userId;
      allow create, update: if request.auth.uid == userId
                         && request.resource.size < 5 * 1024 * 1024 // Limite de 5MB
                         && request.resource.contentType.matches('image/.*|video/.*|audio/.*');
    }
    
    // Pasta final de produção: Acesso de leitura público a todo o conteúdo dentro de uma página de amor.
    match /lovepages/{pageId}/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Ninguém, exceto o backend, deve escrever aqui.
    }
    
    // Regra legado (mantida por segurança, mas o ideal é não usar mais)
    match /gallery-images/{allPaths=**} { 
      allow read: if true; 
      allow write: if false; 
    }
  }
}
